@using DssProjectElephant.ViewModels;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h4>Log in to your account</h4>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div class="form-group">
                        <label for="UserName" class="control-label">Email Address</label>
                        <input id="UserName" name="UserName" class="form-control" value="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">Password</label>
                        <input id="Password" name="Password" class="form-control" type="password" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-success float-right" type="submit">Log in</button>
                        <a class="btn btn-outline-secondary" href="/Home/Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

