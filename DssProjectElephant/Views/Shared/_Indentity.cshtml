﻿@using Microsoft.AspNetCore.Identity;
@using DssProjectElephant.Models;
@inject UserManager<AppUser> UserManager;


@if (!User.Identity.IsAuthenticated)
{
        <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="AppUser" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i> Log in
        </a>
        <span style="padding: 5px;"></span>

            <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="AppUser" asp-action="Register">
            <i class="bi bi-person-plus"></i> Register
        </a>
}
else
{
        
        <span style="padding: 5px;"></span>
            <form asp-controller="AppUser" asp-action="Logout">
            <button class="btn btn-outline-danger my-2 my-sm-0">
                <i class="bi bi-box-arrow-in-right"></i> Log out
            </button>
        </form>
}